<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/colorLightYellow"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ivCoupon_Photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:background="@color/colorWhite"
            android:src="@drawable/nopicture"/>
        <TextView
            android:id="@+id/tvCoupon_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivCoupon_Photo"
            android:paddingLeft="10dp"
            android:text="優惠卷名稱"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/tvCoupon_Period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivCoupon_Photo"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:text="使用期限:"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/tvCoupon_Discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="折扣"
            android:textColor="@color/colorBlack"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>