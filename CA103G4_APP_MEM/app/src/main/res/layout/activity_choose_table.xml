<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.chooseTableActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView1"
                    android:text="尚未選位人數  "
                    android:textSize="16sp"
                    android:textColor="@color/colorRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvPeople"
                    android:text="4"
                    android:textSize="16sp"
                    android:textColor="@color/colorRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnBookingOk"
                    android:text="@string/Ok"
                    android:textSize="16sp"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:onClick="onBookingClick"/>

            </LinearLayout>

            <TextView
                android:text="A區:吧檯"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>

            <idv.tony.ca103g4_app_mem.main.MyGridView
                android:id="@+id/gvTable"
                android:background="@color/colorWhite"
                android:horizontalSpacing="6dp"
                android:verticalSpacing="6dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:columnWidth="100dp"
                android:numColumns="10" />

            <TextView
                android:text="B區:兩人桌"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>

            <idv.tony.ca103g4_app_mem.main.MyGridView
                android:id="@+id/gvTableB"
                android:background="@color/colorWhite"
                android:horizontalSpacing="6dp"
                android:verticalSpacing="6dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:columnWidth="100dp"
                android:numColumns="4" />

            <TextView
                android:text="C區:四人桌"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>

            <idv.tony.ca103g4_app_mem.main.MyGridView
                android:id="@+id/gvTableC"
                android:background="@color/colorWhite"
                android:horizontalSpacing="6dp"
                android:verticalSpacing="6dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:columnWidth="100dp"
                android:numColumns="4" />

            <TextView
                android:text="D區:六人桌"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>

            <idv.tony.ca103g4_app_mem.main.MyGridView
                android:id="@+id/gvTableD"
                android:background="@color/colorWhite"
                android:horizontalSpacing="6dp"
                android:verticalSpacing="6dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:columnWidth="100dp"
                android:numColumns="3" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>