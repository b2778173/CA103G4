<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BookingActivity">

    <ImageView
        android:id="@+id/bookingMainImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/ad_06"/>

    <TextView
        android:text="選擇訂位日期及人數:"
        android:textColor="@color/colorRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightYellow">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_home_black_24dp"/>

        <TextView
            android:id="@+id/textView1"
            android:text="選擇店點"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/imageView1"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/spBranch"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:gravity="right">

        </Spinner>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray2">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_event_available_black_24dp"/>

        <TextView
            android:id="@+id/textView2"
            android:text="訂位日期"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/imageView2"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvDiningDate"
            android:text="2018-10-19"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@+id/ibDiningDate"
            android:layout_marginRight="20dp"
            android:gravity="right"/>

        <ImageButton
            android:id="@+id/ibDiningDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            tools:targetApi="lollipop">

        </ImageButton>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightYellow">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_person_black_24dp"/>

        <TextView
            android:id="@+id/textView3"
            android:text="用餐人數"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/imageView3"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/spDiningPeople"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:entries="@array/diningPeople_array"
            android:spinnerMode="dropdown" >

        </Spinner>

    </RelativeLayout>

    <TextView
        android:text="選擇訂位時間:"
        android:textColor="@color/colorRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button1"
            android:text="10:30"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/button2"
            android:text="12:00"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/button3"
            android:text="13:30"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/button4"
            android:text="15:00"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button5"
            android:text="16:30"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/button6"
            android:text="18:00"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/button7"
            android:text="19:30"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/button8"
            android:text="21:00"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"/>

    </LinearLayout>



    <TextView
        android:text="訂位注意事項"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/textview_border"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="5dp"/>



</LinearLayout>